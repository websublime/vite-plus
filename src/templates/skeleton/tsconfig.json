{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {},
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "apps/**/*.tsx",
    "apps/**/*.vue",
    "libs/**/*.ts",
    "libs/**/*.d.ts",
    "libs/**/*.tsx",
    "libs/**/*.vue"
  ]
}
