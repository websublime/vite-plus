{
  "author": {
    "email": "author@email.com",
    "name": "Author Developer",
    "url": "https://author.dev"
  },
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "build": "vite build",
    "lint": "eslint --ext .ts --fix --max-warnings 0 .",
    "start": "vite --debug --open"
  },
  "dependencies": {
    "vue": "^3.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vitejs/plugin-vue": "^1.0.4",
    "@vue/compiler-sfc": "^3.0.5",
    "@vuedx/typecheck": "^0.4.1",
    "@vuedx/typescript-plugin-vue": "^0.4.1",
    "@websublime/eslint-config": "^1.2.1",
    "autoprefixer": "^10.0.1",
    "eslint": "^7.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-vue": "^7.2.0",
    "node-sass": "^4.12.0",
    "postcss": "^8.2.4",
    "prettier": "^1.19.1",
    "sass": "^1.26.11",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3",
    "vite": "^2.0.0-beta.26",
    "husky": "^4.3.7",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "eslintConfig": {
    "extends": [
      "@websublime/eslint-config/vue"
    ],
    "ignorePatterns": [
      "node_modules/",
      ".data/",
      "dist/",
      "*.spec.ts",
      "*.e2e-spec.ts",
      "*.d.ts"
    ],
    "root": true,
    "rules": {
      "import/extensions": [
        "error",
        "never",
        {
          "css": "always",
          "page": "ignorePackages",
          "provider": "ignorePackages",
          "scss": "always",
          "service": "ignorePackages",
          "svg": "always",
          "view": "ignorePackages",
          "vue": "always"
        }
      ]
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 120,
    "proseWrap": "never",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": true
  }
}
